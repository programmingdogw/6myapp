<% provide(:title, "編集ページ") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :ニックネーム %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :死亡予定日 %>
      <%= f.date_select :deathdate, use_month_numbers: true, start_year: 2020, end_year:2120, class: 'form_control'%>
      
      <%= f.label :残りの人生で１日平均何時間寝ますか？ %>
      <%= f.number_field :sleepingtime, step: "0.1" %>

      <%= f.label :残りの人生で１日平均何時間移動に使いますか？ %>
      <%= f.number_field :commutingtime, step: "0.1" %>

      <%= f.label :残りの人生で１日平均何時間働きますか？ %>
      <%= f.number_field :workingtime, step: "0.1" %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>

    <% end %>

