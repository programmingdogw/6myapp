<%provide(:title, 'Sign up')%>

<h1>Sing Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url:signup_path) do |f| %>
      
      <%= render 'shared/error_messages' %>
      
      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form_control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form_control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form_control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form_control' %>
      
      <%= f.label :生年月日 %>
      <%= f.date_select :birthdate, use_month_numbers: true, start_year: 1940, end_year:2020, class: 'form_control'%>

      <%= f.label :死亡予定日 %>
      <%= f.date_select :deathdate, use_month_numbers: true, start_year: 2020, end_year:2120, class: 'form_control'%>
      
      <%= f.label :１日何時間寝ますか？ %>
      <%= f.number_field :sleepingtime, step: "0.1" %>

      <%= f.label :１日何時間通勤に使いますか？ %>
      <%= f.number_field :commutingtime, step: "0.1" %>

      <%= f.label :１日何時間働きますか？ %>
      <%= f.number_field :workingtime, step: "0.1" %>


      <%= f.submit "Create my account", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>