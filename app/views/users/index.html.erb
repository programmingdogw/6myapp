<% provide(:title, 'All users') %>
<h1>All users</h1>

<div class="pagenation"><%= will_paginate %> </div>

<div class="container userindexcontainer">

    <div class="row box">

    <% @users.each do |user| %>
                    
                <%- if user.image? %>

                    <%= image_tag user.image, :size =>'180x180', class:"" %>
                <% else %>
                    <%= image_tag 'noimage.png', :size =>'180x180', class:"" %>
            
                <% end %> 

    <% end %>

    </div>

    <div class="row box">
        <div class= indexuserwrapper>
            <% @users.each do |user| %>
            
                <div class="indexusername">
                <%= link_to user.name, user %>
                </div >
            
            <% end %>
        </div>
    </div>



</div>




