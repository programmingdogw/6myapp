<%= form_for(@picture, url: {controller: 'pictures', action: 'create' }) do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.submit %>
<% end %>
 